/* pages/my/my.wxss */
.my-container{
    background-color: #f5f5f5;
}
.my-top{
    width: 100%;
    position: relative;
}
.my-top-tag{
    position: absolute;
    top: 80rpx;
    right: 0;
    background-color: #feab00;
    width: 208rpx;
    height: 60rpx;
    border-radius: 30rpx 0 0 30rpx;
    z-index: 500;
    line-height: 60rpx;
    color: #ffffff;
    font-size: 24rpx;
    padding-left: 30rpx;
    background-image: url(http://file.baozhixing.com/%E8%BF%9E%E6%8E%A5.png);
    background-repeat: no-repeat;
    background-size: 24rpx 24rpx;
    background-position: right 40rpx center;

}
.bg-orange{
    height: 200rpx;
    width: 100%;
    position: relative;
    /*background: linear-gradient 渐变色 */
    background: linear-gradient(180deg,rgb(255,191,0,1) 0%,rgba(255,166,0,1) 100%);
}
.my-top-container{
    position: absolute;
    background-color: #fff;
    top: 20rpx;
    left: 40rpx;
    right: 40rpx;
    height: 200rpx;
    border-radius: 20rpx 20rpx 0 0;
}
.userInfo-content{
    width: 100%;
    padding: 40rpx 0 0 40rpx;
    display: flex;
    flex-flow: row nowrap;
    margin-bottom: 30rpx;
}
.portrait{
    height: 100rpx;
    width: 100rpx;
    border-radius: 50%;
}
.username-container{
    margin-left: 40rpx;
    display: flex;
    align-items: center;
}
.username-content{
    height: 52rpx;
    line-height: 52rpx;
    font-size: 32rpx;
    color: #282828;
    margin-bottom: 14rpx;
}
.user-menu{
    background-color: #fff;
    padding: 0 50rpx;
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-between;
}
.user-menu-item{
    display: flex;
    flex-direction: column;
    width: 80rpx;
    align-items: center;
    position: relative;
}
.menu-icon{
    height: 80rpx;
    width: 80rpx;
    margin-bottom: 20rpx;
}
.menu-text{
    height: 35rpx;
    line-height: 35rpx;
    font-size: 25rpx;
    color: #282828;
}
.recomend-container{
    width: 100%;
    padding-top: 174rpx;
    padding-bottom: 30rpx;
    margin-bottom: 20rpx;
    background-color: #fff;
}
.recomend-title{
    height: 48rpx;
    font-size: 40rpx;
    font-weight: 500;
    color: rgba(40, 40, 40, 1);
    line-height: 48rpx;
    margin-bottom: 20rpx;
    padding-left: 40rpx;
}
.swiper-recomend{
    height: 292rpx;
}
.swiper-item{
	width: 530rpx!important;
	height: 100%;
	padding-right: 30rpx;
}
.slide-image{
	height: 100%;
}
.swiper-item-content{
	height: 100%;
	background-color: #f5f5f5;
    border-radius:10rpx;
    padding: 30rpx 20rpx 0;
}
.product-title{
	height: 40rpx;
	line-height: 40rpx;
	display: flex;
	flex-flow: row nowrap;
	margin-bottom: 30rpx;
}
.product-title-tag{
	font-size: 20rpx;
	padding: 6rpx 10rpx;
	background-color: #FFA600;
	color: #fff;
	line-height: 32rpx;
	border-radius:10rpx;
	margin-right: 20rpx;
}
.product-title-text{
	font-size: 32rpx;
	color: #282828;
}
.center-text{
	height: 44rpx;
	font-size:36rpx;
	font-family:PingFangSC-Medium;
	font-weight:500;
	color:rgba(24,93,208,1);
	line-height:44rpx;
	margin-bottom: 10rpx;
}
.miaoshu{
	display: flex;
	font-size:28rpx;
	color:rgba(158,158,158,1);
	line-height:34rpx;
	margin-bottom: 20rpx;
}
.swiper-item-bottom{
	height: 54rpx;
	line-height: 54rpx;
	display: flex;
	flex-flow: row nowrap;
	justify-content: space-between;
}
.bottom-text{
	height: 54rpx;
	line-height: 54rpx;
	font-size:24rpx;
	font-family:PingFangSC-Regular;
	font-weight:400;
	color:rgba(158,158,158,1);
}
.toDetails{
	width:116rpx;
	height:54rpx;
	background:linear-gradient(90deg,rgba(252,191,0,1) 0%,rgba(255,166,0,1) 100%);
	border-radius:29rpx;
	color: #fff;
	font-size: 28rpx;
	line-height: 54rpx;
	text-align: center;
}
.option-menu{
    padding: 0 40rpx 24rpx;
    background-color: #fff;
}
.option-menu-item-nav{
    border-bottom: 2rpx solid #ececec;
}
.option-menu-item-nav:last-child{
    border: none;
}
.option-menu-item{
    height: 80rpx;
    line-height: 80rpx;
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
    position: relative;
}
.option-menu-item-image{
    height: 30rpx;
    width: 30rpx;
    margin-right: 20rpx;
}
.option-menu-item-text{
    font-size: 28rpx;
    color: #9e9e9e;
}
