/* productA/pages/productList/productList.wxss */
/* 商品列表 */
.productList-container{
  background-color: #efefef;
}
.goodsList-container{
  width: 100%;
  padding-top: 40rpx;
  margin-top: 20rpx;
  background-color: #fff;
}
.goodsList-top{
  margin: 40rpx;
  font-size: 38rpx;
}
.goodsList-box{
  display: flex;
}
.goodsList-box:last-child{
  border-bottom: none;
}
.goodsList-item{
  width: 100%;
  display: flex;
  height: 290rpx;
  padding-top: 20rpx;
  border-bottom: 1rpx solid #efefef;
}
.goodsList-left{
  width: 30%;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.goodsList-xinpin{
  color: #fff;
  height: 30rpx;
  line-height: 30rpx;
  font-size: 26rpx;
  padding: 4rpx 8rpx;
  margin: 6rpx 0 0rpx -80rpx;
  background-color: #436AE6;
  border-top-right-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
}
.img{
  width: 100rpx;
  margin-top: 0;
}
.goodsList-right{
  width: 65%;
  display: flex;
  flex-direction: column;
  padding-right: 20rpx;
}
.goodsList-title{
  font-size: 34rpx;
}
.goodsList-tags{
 margin-top: 20rpx;
}
.goodsList-tag{
  font-size: 24rpx;
  padding: 4rpx 6rpx;
  color: #f48a29;
  border: 1rpx solid #f48a29;
  border-radius: 10rpx;
  margin-right: 20rpx;
}
.goodsList-info{
  font-size: 28rpx;
  color: #9e9e9e;
  margin: 20rpx 0;
  overflow: hidden;
  text-overflow:ellipsis;
  -webkit-line-clamp:2;
}
.goodsList-bottom{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-right: 20rpx;
}
.goodsList-price{
 display: flex;
 justify-content: center;
 align-items: center;
}
.price-icon{
  font-size: 24rpx;
  color: #F43C3C;
}
.price{
  font-size: 36rpx;
  color: #F43C3C;
}
.price-tag{
  font-size: 24rpx;
  color: #9e9e9e;
  margin-left: 6rpx;
}
.goodsList-num{
  font-size: 24rpx;
  color: #9e9e9e;
}