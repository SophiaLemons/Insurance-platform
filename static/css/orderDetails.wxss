.orderDetails-container{
	background-color: #f5f5f5;
}
.product-info{
	padding: 30rpx 40rpx;
	background-color: #fff;
	margin-bottom: 20rpx;
}
.productName{
	font-size: 40rpx;
	line-height: 40rpx;
	color: #282828;
	margin-bottom: 30rpx;
}
.order_no,.order_status{
	display: flex;
	flex-flow: row nowrap;
	justify-content: space-between;
	height: 40rpx;
	line-height: 40rpx;
	font-size: 32rpx;
	color: #636363;
}
.order_no{
	margin-bottom: 20rpx;
}
.copy{
	font-size: 24rpx;
	color: #FFA600;
}
.order_status{
	padding-left: 40rpx;
	position: relative;
}
.order_time{
	font-size: 24rpx;
	color: #9E9E9E;
}
.order_status::after{
	content:'';
	position: absolute;
	height: 20rpx;
	width: 20rpx;
	border-radius: 50%;
	top: 50%;
	left: 0;
	margin-top: -10rpx;
	background-color: #FFA600;
}
.product_base_info{
  padding: 40rpx 40rpx 0;
  background-color: #fff;
  margin-bottom: 20rpx;
}
.basw-info-title{
	height: 40rpx;
	line-height: 40rpx;
	color: #282828;
	font-size: 32rpx;
}
.base-info-item{
	height: 100rpx;
	line-height: 100rpx;
	display: flex;
	flex-flow: row nowrap;
	border-bottom: 2rpx solid #ECECEC;
}
.base-info-item-label{
	width: 168rpx;
	color: #636363;
}
.base-info-item-value{
	color: #282828;
}
.suport-item{
	display: flex;
	flex-flow: row nowrap;
	justify-content: space-between;
	height: 100rpx;
	line-height: 100rpx;
	border-bottom: 2rpx solid #ECECEC;
	color: #282828;
}
.product_base_info .base-info-item:last-child,.product_base_info .suport-item:last-child{
	border-bottom: none;
}
.tbr_title{
	display: flex;
	flex-flow: row nowrap;
	justify-content: space-between;
	height: 40rpx;
	line-height: 40rpx;
}
.open_tbr{
	font-size: 28rpx;
	color: #185DD0;
	padding-right: 32rpx;
	position:relative;
}
.open,.close{
	display: relative;
}
.open::after{
	content:"";
	position: absolute;
	height: 14rpx;
	width: 14rpx;
	border-right:4rpx solid #185DD0;
	border-bottom:4rpx solid #185DD0;
	right: 0;
	top: 7rpx;
	transform: rotate(45deg);
}
.close::after{
	content:"";
	position: absolute;
	height: 14rpx;
	width: 14rpx;
	border-left:4rpx solid #185DD0;
	border-top:4rpx solid #185DD0;
	right: 0;
	top: 15rpx;
	transform: rotate(45deg);
}
.insurance_logo{
	position: absolute;
	top: 25rpx;
	right: 40rpx;
	height: 54rpx;
	display: inline-block;
	width:124rpx;
}
.order_bottom{
	padding: 20rpx 40rpx  114rpx;
	background-color: #fff;
}
.checkXuzhi{
	height: 30rpx;
	line-height: 30rpx;
	font-size: 24rpx;
}
.checkXuzhi text{
	color: #185DD0;
}
.anniu{
	position: fixed;
	bottom: 0;
	left: 0;
	width: 100%;
	display: flex;
	flex-flow: row nowrap;
	justify-content: flex-end;
	background: #fff;
	padding:20rpx 40rpx 40rpx 0;
}
.cancle_order{
	height: 54rpx;
	line-height: 54rpx;
	font-size: 28rpx;
	color: #9E9E9E;
	text-align: center;
	width: 172rpx;
	border-radius: 27rpx;
	border:2rpx solid #9E9E9E;
	margin-right: 30rpx;
}
.close_order{
	height: 54rpx;
	line-height: 54rpx;
	font-size: 28rpx;
	color: #FFA600;
	text-align: center;
	width: 116rpx;
	border-radius: 27rpx;
	border:2rpx solid #FFA600;
}