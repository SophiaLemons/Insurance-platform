.payStateView{
  height: 100%;
  overflow: hidden;
}
.payState{
  padding: 0 30rpx;
  overflow: hidden;
  margin: 140rpx auto 90rpx;
}
.payStateIcon{
  width: 100%;
  overflow: hidden;
  text-align: center;
}
.payStateIcon image{
  width: 118rpx;
  height: 118rpx;
  display: block;
  margin: 22rpx auto;
}
.payStateIcon text{
  font-size: 32rpx;
  color: #282828;
  line-height: 40rpx;
}
.payMoney{
  text-align: center;
  height: 58rpx;
  line-height: 58rpx;
  font-weight: bold;
  color: #282828;
  font-size: 52rpx;
  margin: 50rpx 0;
}
.payHint{
  line-height: 34rpx;
  overflow: hidden;
  font-size: 28rpx;
  color: #9E9E9E;
  text-align: center;
}
.payStateBtn{
  padding: 0 95rpx;
  overflow: hidden;
}
.payStateBtn view{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  overflow: hidden;
  border-radius: 40rpx;
  font-size: 32rpx;
  text-align: center;
}
.payStateBtn view:first-child{
  background:linear-gradient(90deg,rgba(252,191,0,1) 0%,rgba(255,166,0,1) 100%);
  color: #fff;
  border: none;
  margin-bottom: 50rpx;
}
.payStateBtn view:last-child{
  background:#fff;
  color: #FFA600;
  border: 2rpx solid #FFA600;
}