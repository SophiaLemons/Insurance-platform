/* lipeiB/pages/lipeiOrderDetails/lipeiOrderDetails.wxss */
@import "../lipeiInputInfo/lipeiInputInfo.wxss";
.lipei-detils{
	background-color: #f5f5f5;
}
.lipei-pro{
	background-color: #fff;
	padding: 40rpx 40rpx 30rpx;
}
.product-info{
	display: flex;
	flex-direction: column;
	margin-bottom: 20rpx;
}
.ticket{
	display: flex;
	flex-flow: row nowrap;
	justify-content: space-between;
}
.fuzhi_ticket{
    color: rgb(245, 189, 86);
}

.lipei-details-footer{
    background-color: #fff;
    padding: 20rpx 40rpx 20rpx;
}
.call-phone{
    font-size: 24rpx;
    color: #636363;
    margin-bottom: 40rpx;
    line-height: 30rpx;
}

.telPhone{
	color: #185DD0;
}
.footer-options{
	display: flex;
	flex-flow: row nowrap;
	justify-content: flex-end;
}
.chexiao,.resetlipei{
	height: 54rpx;
	line-height: 54rpx;
	width: 172rpx;
	text-align: center;
	font-size: 28rpx;
}
.chexiao{
	border:2rpx solid #9E9E9E;
	border-radius: 27rpx;
	color: #9E9E9E;
	margin-right: 30rpx;
}
.resetlipei{
	border:2rpx solid #FFA600;
	border-radius: 27rpx;
	color: #FFA600;
}
.lipeijine{
	font-size: 32rpx;
}
.lipei-price{
	color: #F43C3C;
}