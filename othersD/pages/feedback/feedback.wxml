  <view class='feedback-con'>
    <view class='border2EC con-content'>
      <view class='feedback-con-title PFM'>反馈内容</view>
        <textarea class='feedback-textarea' placeholder="请具体描述出现的问题（不少于10个字）" placeholder-class='placeholderColor' auto-height maxlength='10000'></textarea>
