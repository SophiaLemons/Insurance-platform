    <view class='concant-personInfo'>
      <view class='info-item'>
        <view class='info-label'>联系人</view>
        <view class='info-value'>小艾</view>~
      </view>
      <view class='info-item'>
        <view class='info-label'>联系方式</view>
        <view class='info-value'>18511164375</view>
      </view>
    </view>
    <view class='tijiao PFM'>
    确认提交
    </view>
  </view>
    
</view>
