page{
  font-family:"PingFangSC-Regular";
  font-size:32rpx;          /*微信小程序中，使用rpx做单位*/
  color: #282828;
}
image{
	vertical-align: bottom;
}
.PFM{
	font-family:"PingFangSC-Medium"!important;
}

.border2EC{
	border-bottom: 2rpx solid #ECECEC;
}
.delay-1s{
	animation-delay: 1s;
}
.delay-05{
	animation-delay: 0.5s;
}
.clearfix{
	min-height: 0px;
	height:auto!important;
	height: 0px;
}
.clearfix:after{
	content: '.';
	display: block;
	height: 0;
	clear: both;
	overflow: hidden;
	visibility: hidden;
}

.bg-eee{
	background-color: #eee;
}

view,form,input,checkbox,picker,swiper,image,swiper-item,textarea{
	margin:0;
	padding: 0;
	box-sizing: border-box;
}
.container{
	padding: 0 40rpx;
}
.title-active{
	background:url(http://file.baozhixing.com/formRectangle.png) no-repeat;
	background-size: 100% 24rpx;
	background-position: bottom 3rpx left;
}
.meau-active{
	font-size: 40rpx!important;
	line-height: 48rpx!important;
	color: #282828;
	font-family:PingFangSC-Medium;
	background:url(http://file.baozhixing.com/Rectangle.png) no-repeat;
	background-size: 100% 24rpx;
	background-position: bottom 3rpx left;
}

.list-item-right::after{
	content: "";
	position: absolute;
	width: 14rpx;
    height: 14rpx;
    border-top: 4rpx solid #959595;
    border-right: 4rpx solid #959595;
    transform: rotate(45deg);
    right: 40rpx;
    top: 50%;
    margin-top:-8rpx; 
}
.placeholderColor{
	color: #9e9e9e;
}

