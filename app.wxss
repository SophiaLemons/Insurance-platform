.upload-btn{
	height: 140rpx;
	width: 140rpx;
	border:2rpx solid rgba(236,236,236,1);
	position: relative;
}
.upload-btn::before,.upload-btn::after {
    content: "";
    position: absolute;
    background: #9E9E9E;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
}
.upload-btn::before {
    width: 56rpx;
    height: 4rpx;
}
.upload-btn::after {
    width: 4rpx;
    height: 56rpx;
}
.weui-navbar__slider{
	height: 3px!important;
	border-radius: 1.5px!important;
}

/*animate.css*/
.slideInUp{
	animation-duration: 0.2s;
}


.dottedLine{
	background-image: url(http://file.baozhixing.com/dashedLine.png);
	background-repeat: no-repeat;
	background-position: bottom left;
	background-size: 100% 4rpx;
}
.fix-iphonex-button {
    bottom:68rpx!important;
}
.fix-iphonex-button::after {
    content: ' ';
    position: fixed;
    bottom: 0!important;
    height: 68rpx!important;
    width: 100%;
    background: #fff;
} 
